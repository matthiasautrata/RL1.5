# =============================================================================
# RL1.5 Data Use Profile
# Version: 0.2
# Date: 2026-02-03
# =============================================================================
# Internal data access control vocabulary.
# =============================================================================

@prefix rl15:    <https://vocabulary.bigbank/rl1.5/> .
@prefix rl15-gov: <https://vocabulary.bigbank/rl1.5/governance/> .
@prefix rl15-du: <https://vocabulary.bigbank/rl1.5/data-use/> .
@prefix odrl:    <http://www.w3.org/ns/odrl/2/> .
@prefix skos:    <http://www.w3.org/2004/02/skos/core#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix org:     <http://www.w3.org/ns/org#> .

# =============================================================================
# PROFILE DECLARATION
# =============================================================================

<https://vocabulary.bigbank/rl1.5/data-use/> a owl:Ontology, odrl:Profile ;
    dcterms:title "RL1.5 Data Use Profile"@en ;
    dcterms:description """
        Internal data access control vocabulary.
        
        Covers:
        - Role and organization-based access
        - Project/initiative scoping
        - Environment controls
        - Consent and legal basis
    """@en ;
    dcterms:created "2026-02-03"^^xsd:date ;
    owl:versionInfo "0.2" ;
    owl:imports <https://vocabulary.bigbank/rl1.5/governance/> .

# =============================================================================
# IDENTITY OPERANDS
# =============================================================================

rl15-du:role a rl15:LeftOperand ;
    rdfs:label "role"@en ;
    skos:definition "Role of the requesting agent."@en ;
    rl15:contextKey "role" .

rl15-du:organization a rl15:LeftOperand ;
    rdfs:label "organization"@en ;
    skos:definition "Organization of the requesting agent."@en ;
    rl15:contextKey "organization" ;
    rdfs:comment "Hierarchy via org:subOrganizationOf."@en .

rl15-du:costCenter a rl15:LeftOperand ;
    rdfs:label "cost center"@en ;
    skos:definition "Cost center of the requesting agent."@en ;
    rl15:contextKey "costCenter" .

rl15-du:project a rl15:LeftOperand ;
    rdfs:label "project"@en ;
    skos:definition "Project context of the request."@en ;
    rl15:contextKey "project" .

# =============================================================================
# ENVIRONMENT OPERANDS
# =============================================================================

rl15-du:environment a rl15:LeftOperand ;
    rdfs:label "environment"@en ;
    skos:definition "Execution environment."@en ;
    rl15:contextKey "environment" .

rl15-du:production a skos:Concept ; rdfs:label "production"@en .
rl15-du:staging a skos:Concept ; rdfs:label "staging"@en .
rl15-du:development a skos:Concept ; rdfs:label "development"@en .
rl15-du:sandbox a skos:Concept ; rdfs:label "sandbox"@en .

rl15-du:network a rl15:LeftOperand ;
    rdfs:label "network"@en ;
    skos:definition "Network zone of the request."@en ;
    rl15:contextKey "network" .

rl15-du:internalNetwork a skos:Concept ; rdfs:label "internal network"@en .
rl15-du:externalNetwork a skos:Concept ; rdfs:label "external network"@en .
rl15-du:cloudNetwork a skos:Concept ; rdfs:label "cloud network"@en .

# =============================================================================
# CONSENT AND LEGAL BASIS
# =============================================================================

rl15-du:legalBasis a rl15:LeftOperand ;
    rdfs:label "legal basis"@en ;
    skos:definition "Legal basis for processing."@en ;
    rl15:contextKey "legalBasis" .

rl15-du:consent a skos:Concept ; rdfs:label "consent"@en .
rl15-du:contract a skos:Concept ; rdfs:label "contract"@en .
rl15-du:legalObligation a skos:Concept ; rdfs:label "legal obligation"@en .
rl15-du:vitalInterest a skos:Concept ; rdfs:label "vital interest"@en .
rl15-du:publicTask a skos:Concept ; rdfs:label "public task"@en .
rl15-du:legitimateInterest a skos:Concept ; rdfs:label "legitimate interest"@en .

rl15-du:consentId a rl15:LeftOperand ;
    rdfs:label "consent ID"@en ;
    skos:definition "Reference to consent record."@en ;
    rl15:contextKey "consentId" .

# =============================================================================
# ACCESS PATTERN OPERANDS
# =============================================================================

rl15-du:accessPattern a rl15:LeftOperand ;
    rdfs:label "access pattern"@en ;
    skos:definition "Type of data access."@en ;
    rl15:contextKey "accessPattern" .

rl15-du:batch a skos:Concept ; rdfs:label "batch"@en .
rl15-du:streaming a skos:Concept ; rdfs:label "streaming"@en .
rl15-du:interactive a skos:Concept ; rdfs:label "interactive"@en .
rl15-du:api a skos:Concept ; rdfs:label "API"@en .

rl15-du:volumeLimit a rl15:LeftOperand ;
    rdfs:label "volume limit"@en ;
    skos:definition "Maximum data volume per request."@en ;
    rl15:contextKey "volumeLimit" .

rl15-du:rateLimit a rl15:LeftOperand ;
    rdfs:label "rate limit"@en ;
    skos:definition "Maximum requests per time period."@en ;
    rl15:contextKey "rateLimit" .

# =============================================================================
# ACTIONS
# =============================================================================

rl15-du:query a rl15:Action ;
    rdfs:label "query"@en ;
    skos:definition "Query/select data."@en ;
    rl15:includedIn rl15-gov:read .

rl15-du:export a rl15:Action ;
    rdfs:label "export"@en ;
    skos:definition "Export data outside the system."@en .

rl15-du:copy a rl15:Action ;
    rdfs:label "copy"@en ;
    skos:definition "Copy data to another location."@en .

rl15-du:link a rl15:Action ;
    rdfs:label "link"@en ;
    skos:definition "Link/join with other datasets."@en .

rl15-du:profile a rl15:Action ;
    rdfs:label "profile"@en ;
    skos:definition "Create profiles from data."@en ;
    rl15:includedIn rl15-gov:derive .

# =============================================================================
# END OF PROFILE
# =============================================================================
