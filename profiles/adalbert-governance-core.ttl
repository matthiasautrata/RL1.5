# =============================================================================
# Adalbert Data Governance Core Profile
# Version: 0.2
# Date: 2026-02-03
# =============================================================================
# Shared operands and actions for data governance across domains.
# =============================================================================

@prefix adalbert:     <https://vocabulary.bigbank/adalbert/> .
@prefix adalbert-gov: <https://vocabulary.bigbank/adalbert/governance/> .
@prefix odrl:     <http://www.w3.org/ns/odrl/2/> .
@prefix skos:     <http://www.w3.org/2004/02/skos/core#> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms:  <http://purl.org/dc/terms/> .

# =============================================================================
# PROFILE DECLARATION
# =============================================================================

<https://vocabulary.bigbank/adalbert/governance/> a owl:Ontology, odrl:Profile ;
    dcterms:title "Adalbert Data Governance Core Profile"@en ;
    dcterms:description """
        Shared vocabulary for data governance:
        - Purpose and classification constraints
        - Jurisdiction and residency requirements  
        - Retention and processing controls
        - Audit and logging requirements
    """@en ;
    dcterms:created "2026-02-02"^^xsd:date ;
    dcterms:modified "2026-02-03"^^xsd:date ;
    owl:versionInfo "0.2" ;
    owl:imports <https://vocabulary.bigbank/adalbert/> .

# =============================================================================
# PURPOSE OPERANDS
# =============================================================================

adalbert-gov:purpose a adalbert:LeftOperand ;
    rdfs:label "purpose"@en ;
    skos:definition "Intended use of the data."@en ;
    adalbert:contextKey "purpose" ;
    rdfs:comment "Purpose hierarchy uses skos:broader for subsumption."@en .

# Purpose taxonomy
adalbert-gov:analytics a skos:Concept ;
    rdfs:label "analytics"@en ;
    skos:definition "General analytical use."@en .

adalbert-gov:research a skos:Concept ;
    rdfs:label "research"@en ;
    skos:definition "Research and development."@en .

adalbert-gov:compliance a skos:Concept ;
    rdfs:label "compliance"@en ;
    skos:definition "Regulatory compliance."@en .

adalbert-gov:operations a skos:Concept ;
    rdfs:label "operations"@en ;
    skos:definition "Operational use."@en .

# =============================================================================
# CLASSIFICATION OPERANDS
# =============================================================================

adalbert-gov:classification a adalbert:LeftOperand ;
    rdfs:label "classification"@en ;
    skos:definition "Data classification level."@en ;
    adalbert:contextKey "classification" .

adalbert-gov:sensitivity a adalbert:LeftOperand ;
    rdfs:label "sensitivity"@en ;
    skos:definition "Data sensitivity type."@en ;
    adalbert:contextKey "sensitivity" .

# Classification values
adalbert-gov:public a skos:Concept ; rdfs:label "public"@en .
adalbert-gov:internal a skos:Concept ; rdfs:label "internal"@en .
adalbert-gov:confidential a skos:Concept ; rdfs:label "confidential"@en .
adalbert-gov:restricted a skos:Concept ; rdfs:label "restricted"@en .

# Sensitivity values
adalbert-gov:pii a skos:Concept ; rdfs:label "PII"@en ; skos:definition "Personally Identifiable Information."@en .
adalbert-gov:mnpi a skos:Concept ; rdfs:label "MNPI"@en ; skos:definition "Material Non-Public Information."@en .
adalbert-gov:phi a skos:Concept ; rdfs:label "PHI"@en ; skos:definition "Protected Health Information."@en .

# =============================================================================
# JURISDICTION OPERANDS
# =============================================================================

adalbert-gov:jurisdiction a adalbert:LeftOperand ;
    rdfs:label "jurisdiction"@en ;
    skos:definition "Legal jurisdiction governing data use."@en ;
    adalbert:contextKey "jurisdiction" .

adalbert-gov:residency a adalbert:LeftOperand ;
    rdfs:label "residency"@en ;
    skos:definition "Data residency location."@en ;
    adalbert:contextKey "residency" .

# =============================================================================
# TEMPORAL OPERANDS
# =============================================================================

adalbert-gov:retentionPeriod a adalbert:LeftOperand ;
    rdfs:label "retention period"@en ;
    skos:definition "Maximum time data may be retained."@en ;
    adalbert:contextKey "retentionPeriod" .

adalbert-gov:expiry a adalbert:LeftOperand ;
    rdfs:label "expiry"@en ;
    skos:definition "Expiration date of the policy."@en ;
    adalbert:contextKey "expiry" .

# =============================================================================
# PROCESSING OPERANDS
# =============================================================================

adalbert-gov:processingMode a adalbert:LeftOperand ;
    rdfs:label "processing mode"@en ;
    skos:definition "How data is processed."@en ;
    adalbert:contextKey "processingMode" .

adalbert-gov:human a skos:Concept ; rdfs:label "human"@en .
adalbert-gov:automated a skos:Concept ; rdfs:label "automated"@en .
adalbert-gov:modelTraining a skos:Concept ; rdfs:label "model training"@en .
adalbert-gov:inference a skos:Concept ; rdfs:label "inference"@en .

# =============================================================================
# AUDIT OPERANDS
# =============================================================================

adalbert-gov:auditRequired a adalbert:LeftOperand ;
    rdfs:label "audit required"@en ;
    skos:definition "Whether audit logging is required."@en ;
    adalbert:contextKey "auditRequired" .

# =============================================================================
# COMMON ACTIONS
# =============================================================================

adalbert-gov:use a adalbert:Action ;
    rdfs:label "use"@en ;
    skos:definition "General use of the asset."@en .

adalbert-gov:read a adalbert:Action ;
    rdfs:label "read"@en ;
    skos:definition "Read/view the asset."@en ;
    adalbert:includedIn adalbert-gov:use .

adalbert-gov:distribute a adalbert:Action ;
    rdfs:label "distribute"@en ;
    skos:definition "Distribute to third parties."@en .

adalbert-gov:delete a adalbert:Action ;
    rdfs:label "delete"@en ;
    skos:definition "Delete the asset."@en .

adalbert-gov:modify a adalbert:Action ;
    rdfs:label "modify"@en ;
    skos:definition "Modify the asset."@en .

adalbert-gov:aggregate a adalbert:Action ;
    rdfs:label "aggregate"@en ;
    skos:definition "Aggregate with other data."@en .

adalbert-gov:anonymize a adalbert:Action ;
    rdfs:label "anonymize"@en ;
    skos:definition "Remove identifying information."@en .

adalbert-gov:derive a adalbert:Action ;
    rdfs:label "derive"@en ;
    skos:definition "Create derived data."@en .

adalbert-gov:log a adalbert:Action ;
    rdfs:label "log"@en ;
    skos:definition "Log access to the asset."@en .

adalbert-gov:notify a adalbert:Action ;
    rdfs:label "notify"@en ;
    skos:definition "Notify relevant parties."@en .

# =============================================================================
# END OF PROFILE
# =============================================================================
