# =============================================================================
# Adalbert Data Use Profile
# Version: 0.2
# Date: 2026-02-03
# =============================================================================
# Internal data access control vocabulary.
# =============================================================================

@prefix adalbert:    <https://vocabulary.bigbank/adalbert/> .
@prefix adalbert-gov: <https://vocabulary.bigbank/adalbert/governance/> .
@prefix adalbert-du: <https://vocabulary.bigbank/adalbert/data-use/> .
@prefix odrl:    <http://www.w3.org/ns/odrl/2/> .
@prefix skos:    <http://www.w3.org/2004/02/skos/core#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix org:     <http://www.w3.org/ns/org#> .

# =============================================================================
# PROFILE DECLARATION
# =============================================================================

<https://vocabulary.bigbank/adalbert/data-use/> a owl:Ontology, odrl:Profile ;
    dcterms:title "Adalbert Data Use Profile"@en ;
    dcterms:description """
        Internal data access control vocabulary.
        
        Covers:
        - Role and organization-based access
        - Project/initiative scoping
        - Environment controls
        - Consent and legal basis
    """@en ;
    dcterms:created "2026-02-03"^^xsd:date ;
    owl:versionInfo "0.2" ;
    owl:imports <https://vocabulary.bigbank/adalbert/governance/> .

# =============================================================================
# IDENTITY OPERANDS
# =============================================================================

adalbert-du:role a adalbert:LeftOperand ;
    rdfs:label "role"@en ;
    skos:definition "Role of the requesting agent."@en ;
    adalbert:contextKey "role" .

adalbert-du:organization a adalbert:LeftOperand ;
    rdfs:label "organization"@en ;
    skos:definition "Organization of the requesting agent."@en ;
    adalbert:contextKey "organization" ;
    rdfs:comment "Hierarchy via org:subOrganizationOf."@en .

adalbert-du:costCenter a adalbert:LeftOperand ;
    rdfs:label "cost center"@en ;
    skos:definition "Cost center of the requesting agent."@en ;
    adalbert:contextKey "costCenter" .

adalbert-du:project a adalbert:LeftOperand ;
    rdfs:label "project"@en ;
    skos:definition "Project context of the request."@en ;
    adalbert:contextKey "project" .

# =============================================================================
# ENVIRONMENT OPERANDS
# =============================================================================

adalbert-du:environment a adalbert:LeftOperand ;
    rdfs:label "environment"@en ;
    skos:definition "Execution environment."@en ;
    adalbert:contextKey "environment" .

adalbert-du:production a skos:Concept ; rdfs:label "production"@en .
adalbert-du:staging a skos:Concept ; rdfs:label "staging"@en .
adalbert-du:development a skos:Concept ; rdfs:label "development"@en .
adalbert-du:sandbox a skos:Concept ; rdfs:label "sandbox"@en .

adalbert-du:network a adalbert:LeftOperand ;
    rdfs:label "network"@en ;
    skos:definition "Network zone of the request."@en ;
    adalbert:contextKey "network" .

adalbert-du:internalNetwork a skos:Concept ; rdfs:label "internal network"@en .
adalbert-du:externalNetwork a skos:Concept ; rdfs:label "external network"@en .
adalbert-du:cloudNetwork a skos:Concept ; rdfs:label "cloud network"@en .

# =============================================================================
# CONSENT AND LEGAL BASIS
# =============================================================================

adalbert-du:legalBasis a adalbert:LeftOperand ;
    rdfs:label "legal basis"@en ;
    skos:definition "Legal basis for processing."@en ;
    adalbert:contextKey "legalBasis" .

adalbert-du:consent a skos:Concept ; rdfs:label "consent"@en .
adalbert-du:contract a skos:Concept ; rdfs:label "contract"@en .
adalbert-du:legalObligation a skos:Concept ; rdfs:label "legal obligation"@en .
adalbert-du:vitalInterest a skos:Concept ; rdfs:label "vital interest"@en .
adalbert-du:publicTask a skos:Concept ; rdfs:label "public task"@en .
adalbert-du:legitimateInterest a skos:Concept ; rdfs:label "legitimate interest"@en .

adalbert-du:consentId a adalbert:LeftOperand ;
    rdfs:label "consent ID"@en ;
    skos:definition "Reference to consent record."@en ;
    adalbert:contextKey "consentId" .

# =============================================================================
# ACCESS PATTERN OPERANDS
# =============================================================================

adalbert-du:accessPattern a adalbert:LeftOperand ;
    rdfs:label "access pattern"@en ;
    skos:definition "Type of data access."@en ;
    adalbert:contextKey "accessPattern" .

adalbert-du:batch a skos:Concept ; rdfs:label "batch"@en .
adalbert-du:streaming a skos:Concept ; rdfs:label "streaming"@en .
adalbert-du:interactive a skos:Concept ; rdfs:label "interactive"@en .
adalbert-du:api a skos:Concept ; rdfs:label "API"@en .

adalbert-du:volumeLimit a adalbert:LeftOperand ;
    rdfs:label "volume limit"@en ;
    skos:definition "Maximum data volume per request."@en ;
    adalbert:contextKey "volumeLimit" .

adalbert-du:rateLimit a adalbert:LeftOperand ;
    rdfs:label "rate limit"@en ;
    skos:definition "Maximum requests per time period."@en ;
    adalbert:contextKey "rateLimit" .

# =============================================================================
# ACTIONS
# =============================================================================

adalbert-du:query a adalbert:Action ;
    rdfs:label "query"@en ;
    skos:definition "Query/select data."@en ;
    adalbert:includedIn adalbert-gov:read .

adalbert-du:export a adalbert:Action ;
    rdfs:label "export"@en ;
    skos:definition "Export data outside the system."@en .

adalbert-du:copy a adalbert:Action ;
    rdfs:label "copy"@en ;
    skos:definition "Copy data to another location."@en .

adalbert-du:link a adalbert:Action ;
    rdfs:label "link"@en ;
    skos:definition "Link/join with other datasets."@en .

adalbert-du:profile a adalbert:Action ;
    rdfs:label "profile"@en ;
    skos:definition "Create profiles from data."@en ;
    adalbert:includedIn adalbert-gov:derive .

# =============================================================================
# END OF PROFILE
# =============================================================================
