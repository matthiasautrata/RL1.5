<https://rl2.org/rl1.5/data-use#ontology>
    a prof:ResourceDescriptor ;
    dct:title "RL1.5 Data Use Vocabulary"@en ;
    prof:hasRole role:vocabulary ;
    dct:format <https://w3id.org/mediatype/text/turtle> ;
    prof:hasArtifact <https://rl2.org/rl1.5/profiles/rl1_5-data-use.ttl> .

# --- DCON Conformance Profile ---
<https://rl2.org/rl1.5/dcon>
    a prof:Profile ;
    dct:title "RL1.5 DCON Conformance Profile"@en ;
