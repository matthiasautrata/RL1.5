# =============================================================================
# RL1.5 Profile Declaration (DXPROF)
# Version: 0.2
# Date: 2026-02-03
# =============================================================================
# W3C Profiles Vocabulary metadata for RL1.5.
# =============================================================================

@prefix rl15:    <https://vocabulary.bigbank/rl1.5/> .
@prefix prof:    <http://www.w3.org/ns/dx/prof/> .
@prefix role:    <http://www.w3.org/ns/dx/prof/role/> .
@prefix dct:     <http://purl.org/dc/terms/> .
@prefix odrl:    <http://www.w3.org/ns/odrl/2/> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .

# =============================================================================
# BASE SPECIFICATION
# =============================================================================

odrl:core a dct:Standard ;
    dct:title "ODRL Information Model 2.2"@en ;
    dct:identifier <http://www.w3.org/TR/odrl-model/> .

# =============================================================================
# RL1.5 CORE PROFILE
# =============================================================================

<https://vocabulary.bigbank/rl1.5/> a prof:Profile ;
    dct:title "RL1.5 Core"@en ;
    dct:description "Deterministic policy language extending ODRL 2.2."@en ;
    prof:isProfileOf odrl:core ;
    prof:hasToken "rl15"^^xsd:token ;
    
    prof:hasResource [
        a prof:ResourceDescriptor ;
        dct:title "RL1.5 Specification"@en ;
        prof:hasRole role:specification ;
        prof:hasArtifact <https://vocabulary.bigbank/rl1.5/docs/README.md>
    ] , [
        a prof:ResourceDescriptor ;
        dct:title "RL1.5 Formal Semantics"@en ;
        prof:hasRole role:specification ;
        prof:hasArtifact <https://vocabulary.bigbank/rl1.5/docs/RL1_5_Semantics.md>
    ] , [
        a prof:ResourceDescriptor ;
        dct:title "RL1.5 Core Ontology"@en ;
        prof:hasRole role:vocabulary ;
        dct:conformsTo owl: ;
        prof:hasArtifact <https://vocabulary.bigbank/rl1.5/ontology/rl1_5-core.ttl>
    ] , [
        a prof:ResourceDescriptor ;
        dct:title "RL1.5 SHACL Shapes"@en ;
        prof:hasRole role:validation ;
        dct:conformsTo <http://www.w3.org/ns/shacl#> ;
        prof:hasArtifact <https://vocabulary.bigbank/rl1.5/ontology/rl1_5-shacl.ttl>
    ] .

# =============================================================================
# DOMAIN PROFILES
# =============================================================================

<https://vocabulary.bigbank/rl1.5/governance/> a prof:Profile ;
    dct:title "RL1.5 Governance Core"@en ;
    prof:isProfileOf <https://vocabulary.bigbank/rl1.5/> ;
    prof:hasToken "rl15-gov"^^xsd:token .

<https://vocabulary.bigbank/rl1.5/market-data/> a prof:Profile ;
    dct:title "RL1.5 Market Data"@en ;
    prof:isProfileOf <https://vocabulary.bigbank/rl1.5/governance/> ;
    prof:isTransitiveProfileOf <https://vocabulary.bigbank/rl1.5/> , odrl:core ;
    prof:hasToken "rl15-md"^^xsd:token .

<https://vocabulary.bigbank/rl1.5/data-use/> a prof:Profile ;
    dct:title "RL1.5 Data Use"@en ;
    prof:isProfileOf <https://vocabulary.bigbank/rl1.5/governance/> ;
    prof:isTransitiveProfileOf <https://vocabulary.bigbank/rl1.5/> , odrl:core ;
    prof:hasToken "rl15-du"^^xsd:token .

<https://vocabulary.bigbank/rl1.5/contracts/> a prof:Profile ;
    dct:title "RL1.5 Contracts"@en ;
    prof:isProfileOf <https://vocabulary.bigbank/rl1.5/> ;
    prof:isTransitiveProfileOf odrl:core ;
    prof:hasToken "rl15-dc"^^xsd:token .

# =============================================================================
# END
# =============================================================================
